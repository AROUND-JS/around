    <style>

        #banner {
            padding: 13em 0 8em 0;
            background-color: #0c0c0c;
            background-image: url(/images/trip.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: 15% left;
            text-align: left;
            z-index: 9999;
            opacity: 0.9;
        }

        #banner .inner {
            padding-top: 5rem;
            max-width: 65em;
            width: calc(100% - 6em);
            margin: 0 auto;
            position: relative;
            z-index: 10000;
            line-height: 1.5;
            text-align: center;
        }

        #banner h1 {
            font-size: 2em;
            margin: 0 0 1em 0;
            padding: 0;
            letter-spacing: 3px;
            font-weight: 700;
            color: #fff;
        }

        @media (max-width: 1500px) {
            .content-wrap {
            width: 100%;
            padding: 20px;
            }
        }

        nav ul li a:hover {
            background-color: #ddd;
            color: black;
        }

        .paging ul li a {
            width: 34px;
            height: 34px;
            border-radius: 34px;
            color: #333;
            line-height: 32px;
            display: inline-block;
            box-sizing: border-box;
        }

        a:link, a:visited, a:hover, a, .active, a:focus {
            text-decoration: none;
            cursor: pointer;
            color: inherit;
            word-break: break-word;
        }

        ol:after, ul:after, dl:after {
            content: '';
            display: block;
            clear: both;
        }

        .input_smallBlack {
            padding: 5px 27px;
            background-color: #343434;
            border: none;
            border-radius: 0;
            color: #fff;
            text-align: center;
            letter-spacing: -0.1em;
        }

        #menubar li:hover ul {
            display:block;   /* 마우스 커서 올리면 서브메뉴 보이게 하기 */
        }

        input[type="date"]::-webkit-calendar-picker-indicator,
        input[type="date"]::-webkit-inner-spin-button {
            display: none;
            appearance: none;
        }
        
    </style>

    <script src="//code.jquery.com/jquery.min.js"></script>
    <script>
    $(function(){
    $("#menubar li").hover(function(){
        $('ul:first',this).show();
    }, function(){
        $('ul:first',this).hide();
    });
    $("#menubar>li:has(ul)>a").each( function() {
        $(this).html( $(this).html()+' &or;' );
    });
    $("#menubar ul li:has(ul)")
        .find("a:first")
        .append("<p style='float:right;margin:-3px'>&#9656;</p>");
    });
    </script>
</head>
