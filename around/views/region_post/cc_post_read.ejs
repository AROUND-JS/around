        <div id="content" class="content-wrap" style="padding-top:3rem;">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10">
                    <div class="card">
                        <div class="card-header" style=" padding-right:5px">
                            <div style="margin-bottom: 5px; font-style: bold; margin-top:5px; letter-spacing: 1px;">
                                <span id="content_title" style="font-size: 25px;"><%= cc.cc_post_title %></span>
                            </div>
                            <div class="row">
                                <div class="col-11" style="font-size:14px;color:#bbb;margin-left:15px; word-spacing: 3px;">
                                    <span>By. <%= cc.cc_writer %></span>
                                    <span>|</span>
                                    <span><%= cc.cc_write_date.getFullYear() + "/" + (cc.cc_write_date.getMonth() + 1) + "/" + cc.cc_write_date.getDate() %></span>
                                    <span>|</span>
                                    <span>조회수 : <%= cc.cc_hit %></span>
                                </div>
                                <!-- {% if session['login'] and session['user_idx'] == data_dic.user_idx  %} -->
                                <div class="float-right" style="font-size:14px;bottom:0;">
                                    <a href="/board/modify/chungcheong/<%= cc.cc_post_no %>">수정</a>
                                    <form action="/board/delete/chungcheong/<%= cc.cc_post_no %>?_method=PATCH" method="POST" enctype="multipart/form-data">
                                        <input type="submit" value="삭제">
                                    </form>     
                                </div>
                                <!-- {% endif %} -->
                            </div>
    
                        </div>
                        <div class="card-body">
                            <div style="margin-top: 10px;margin-bottom: 15px">
                                <%= cc.cc_post_text %>
                            </div>
                            <!-- {% if data_dic.content_file != None %} -->
                            <div style="margin-top: 10px;margin-bottom: 15px">
                                <%= cc.cc_post_file %><!-- <img src="/static/upload/{{data_dic.content_file}}" style="max-width:80%;max-height: 80%"/> -->
                            </div>
                            <!-- {% endif %} -->
                            
                        </div> 
                        <div class="card-footer justify-content-center">
                            <div class="button-group justify-content-center">
                                <!-- onclick="read_likes()" -->
                                <button type="button" class="btn btn-primary" >추천</button>
                                <!-- {{data_dic.content_likes}} -->
                                <button type="button" class="btn btn-outline-primary" disabled>좋아요</button>
                            </div>
                            
                        </div>
                    </div>

                    
                    <div class="comments" style="margin-top:1rem;">
                        <h4>Comments (<%= cc.cc_comments ? cc.cc_comments.length : 0 %>)</h4>
                        <% if (cc.cc_comments) { %>
                        <hr />
                        <% for(let comment of cc.cc_comments) { %>
                        <div class="comment">
                            <div class="top">
                                <b><%= comment.dataValues.cc_comment_writer %></b>
                                <% if(comment.dataValues.cc_comment_write_date.getMinutes() < 10) { %>
                                <% if(comment.dataValues.cc_comment_write_date.getSeconds() < 10) { %>
                                <%= '(' + comment.dataValues.cc_comment_write_date.getHours() + ':' + '0'+ comment.dataValues.cc_comment_write_date.getMinutes() + ':' + '0' + comment.dataValues.cc_comment_write_date.getSeconds() + ', ' + comment.dataValues.cc_comment_write_date.getFullYear() + '-' + (comment.dataValues.cc_comment_write_date.getMonth() + 1) + '-' + comment.dataValues.cc_comment_write_date.getDate() + ')'%>
                                <% } else {%>
                                <%= '(' + comment.dataValues.cc_comment_write_date.getHours() + ':' + '0'+ comment.dataValues.cc_comment_write_date.getMinutes() + ':' + comment.dataValues.cc_comment_write_date.getSeconds() + ', ' + comment.dataValues.cc_comment_write_date.getFullYear() + '-' + (comment.dataValues.cc_comment_write_date.getMonth() + 1) + '-' + comment.dataValues.cc_comment_write_date.getDate() + ')'%>
                                <% } %>
                                <% } else { %>
                                <% if (comment.dataValues.cc_comment_write_date.getSeconds() < 10) { %>
                                <%= '(' + comment.dataValues.cc_comment_write_date.getHours() + ':' + comment.dataValues.cc_comment_write_date.getMinutes() + ':' + '0' + comment.dataValues.cc_comment_write_date.getSeconds() + ', ' + comment.dataValues.cc_comment_write_date.getFullYear() + '-' + (comment.dataValues.cc_comment_write_date.getMonth() + 1) + '-' + comment.dataValues.cc_comment_write_date.getDate() + ')'%>
                                <% } else { %>
                                <%= '(' + comment.dataValues.cc_comment_write_date.getHours() + ':' + comment.dataValues.cc_comment_write_date.getMinutes() + ':' + comment.dataValues.cc_comment_write_date.getSeconds() + ', ' + comment.dataValues.cc_comment_write_date.getFullYear() + '-' + (comment.dataValues.cc_comment_write_date.getMonth() + 1) + '-' + comment.dataValues.cc_comment_write_date.getDate() + ')'%>
                                <% } %>
                                <% } %>
                                <form
                                    action='/board/comment/chungcheong/<%= comment.dataValues.cc_comment_no %>?_method=PATCH'
                                    method='post'>
                                    <input type="submit" value="x">
                                </form>
                                </form>
                            </div>

                            <div class="body"><%= comment.dataValues.cc_comment_text %></div>
                        </div>
                        <% } %>
                        <% } %>
                        <form style="display: inline-block; position: relative; width: 100%; max-width: 1580px; "
                            action="/board/comment/chungcheong/<%= cc.cc_post_no %>" method="post">
                            <textarea style="width: 92%; padding-left: 3px; resize: vertical;"
                                placeholder="Add comment here" name="newComment"></textarea>
                            <button type="submit" style="margin-left: 5px; float: right;">Comment</button>
                        </form>

                    </div>
